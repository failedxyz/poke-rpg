{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceRoot": "src/server",
        "sourceMap": true,
        "listFiles": false,
        "outDir": "dist/server"
    },
    "exclude": ["node_modules"]
}